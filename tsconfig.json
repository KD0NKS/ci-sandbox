{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "esnext",
        "noImplicitAny": true,
        "removeComments": true,
        "allowJs": false,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true
    },
    "include": [
        "index.ts",
        "src/**/*"
    ],
    "exclude": [
        ".nyc_output",
        "bin",
        "coverage",
        "dist",
        "node_modules"
    ]
}