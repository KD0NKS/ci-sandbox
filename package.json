{
  "author": "afairhurst",
  "homepage": "https://github.com/KD0NKS/ci-sandbox#readme",
  "license": "Unlicense",
  "name": "ci-sandbox",
  "description": "sandbox for testing ci/cd stuff",
  "version": "0.0.2",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KD0NKS/ci-sandbox.git"
  },
  "scripts": {
    "build": "tsc",
    "setup": "npm install",
    "test": "npm run build && nyc --reporter=text --reporter=lcov mocha dist/test/**/*.test.js",
    "test-only": "mocha dist/test/**/*.test.js",
    "test-report": "nyc npm run test-only && nyc report --reporter=text-lcov | coveralls",
    "tsc": "./node_modules/.bin/tsc"
  },
  "bugs": {
    "url": "https://github.com/KD0NKS/ci-sandbox/issues"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.11.3",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "mocha": "^6.0.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^14.0.0",
    "typescript": "^3.3.3333"
  }
}
